{
  "comments": {
    "lineComment": "//",
    "blockComment": ["////", "////"]
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" },
    { "open": "*", "close": "*" },
    { "open": "_", "close": "_" },
    { "open": "<<", "close": ">>" }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["*", "*"],
    ["_", "_"],
    ["<<", ">>"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*=+\\s",
      "end": "^\\s*=+\\s"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
